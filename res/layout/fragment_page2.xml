<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/page2_background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:scrollbars="vertical" >

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <TableRow
            android:id="@+id/TableRow01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/noticebn"
                android:layout_width="130dp"
                android:layout_height="150dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:background="#00000000"
                android:drawableTop="@drawable/button_notice"
                android:text="通知中心" />

            <Button
                android:id="@+id/lostfindbn"
                android:layout_width="130dp"
                android:layout_height="150dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="#00000000"
                android:drawableTop="@drawable/button_lostfind"
                android:text="失物寻物" />
        </TableRow>

        <TableRow
            android:id="@+id/TableRow02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/lecturebn"
                android:layout_width="130dp"
                android:layout_height="150dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:background="#00000000"
                android:drawableTop="@drawable/button_lecture"
                android:text="讲座信息" />

            <Button
                android:id="@+id/sportbn"
                android:layout_width="130dp"
                android:layout_height="150dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="#00000000"
                android:drawableTop="@drawable/button_sport"
                android:text="体育赛事" />
        </TableRow>

        <TableRow
            android:id="@+id/TableRow03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/clubbn"
                android:layout_width="130dp"
                android:layout_height="150dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:background="#00000000"
                android:drawableTop="@drawable/button_club"
                android:text="社团活动" />

            <Button
                android:id="@+id/forumbn"
                android:layout_width="130dp"
                android:layout_height="150dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="#00000000"
                android:drawableTop="@drawable/button_luntan"
                android:text="校园论坛" />
        </TableRow>

        <TableRow
            android:id="@+id/TableRow04"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/secondarybn"
                android:layout_width="130dp"
                android:layout_height="150dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:background="#00000000"
                android:drawableTop="@drawable/button_secondary"
                android:text="二手交易" />
        </TableRow>
    </TableLayout>

</ScrollView>